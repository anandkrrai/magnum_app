<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="@string/new_discussion"
        android:textColor="#fff"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="39dp" />

    <EditText
        android:id="@+id/new_issue_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/enter_the_name_of_the_issue"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:text="@string/warning_new_issue"
        android:textAlignment="center"
        android:textColor="#fff" />

    <Button
        android:id="@+id/start_issue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/spotify_button"
        android:text="@string/start_issue"
        android:textColor="#fff" />
</LinearLayout>